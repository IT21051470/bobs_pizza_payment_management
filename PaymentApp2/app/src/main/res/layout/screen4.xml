<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEBC1"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450dp"
        android:layout_height="448dp"
        app:srcCompat="@drawable/payment"
        tools:layout_editor_absoluteX="-20dp"
        tools:layout_editor_absoluteY="-171dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="361dp"
        android:layout_height="166dp"
        app:srcCompat="@drawable/card1"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Details"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="276dp"
        android:layout_height="32dp"
        android:text="Name of the Card holder"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="401dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="214dp"
        android:layout_height="34dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Vijay Kumar"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="423dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card number"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="476dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="212dp"
        android:layout_height="39dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="4032 5064 9345 6789"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="502dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp Date"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="547dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="544dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="number"
        android:text="12/20"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="570dp" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="131dp"
        android:layout_height="47dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="567dp"
        tools:text="344" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="356dp"
        android:layout_height="54dp"
        android:text="By Clicking “Confirm Payment”, I agree to the terms of service"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="625dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="681dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="30dp"
        android:layout_height="62dp"
        android:text="CheckBox"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="613dp" />

</androidx.constraintlayout.widget.ConstraintLayout>